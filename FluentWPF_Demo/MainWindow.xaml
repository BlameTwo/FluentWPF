<ui:FluentWindow
    x:Class="FluentWPF_Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluentWPF_Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sysback="clr-namespace:FluentWPF.Controls.SystemBackdrops;assembly=FluentWPF"
    xmlns:ui="clr-namespace:FluentWPF.Controls;assembly=FluentWPF"
    Title="测试应用"
    Width="800"
    Height="450"
    Background="Transparent"
    Style="{DynamicResource DefaultWindowStyle}"
    mc:Ignorable="d">
    <ui:FluentWindow.RightContent>
        <Button Content="测试" />
    </ui:FluentWindow.RightContent>
    <ui:FluentWindow.TitlebarContent>
        <TextBox
            Width="300"
            HorizontalAlignment="Center"
            Text="测试" />
    </ui:FluentWindow.TitlebarContent>
    <ui:FluentWindow.SystemBackdrop>
        <sysback:AcrylicBackdrop />
    </ui:FluentWindow.SystemBackdrop>
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <Button
            Width="200"
            Height="80"
            Click="Light_Click"
            Content="浅色"
            FontSize="17" />
        <Button
            Width="200"
            Height="80"
            Click="Dark_Click"
            Content="深色"
            FontSize="17" />
    </StackPanel>
</ui:FluentWindow>
