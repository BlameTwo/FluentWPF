<Application
    x:Class="AListClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AListClient"
    xmlns:theme="clr-namespace:FluentWPF;assembly=FluentWPF">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  颜色  -->
                <theme:FluentXamlResource Type="Light" />
                <!--  样式  -->
                <ResourceDictionary Source="pack://application:,,,/FluentWPF;component/FluentXamlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="SophiaScript">pack://application:,,,/Assets/#Sophia Script</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
