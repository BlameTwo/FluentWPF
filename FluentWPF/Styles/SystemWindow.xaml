<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:FluentWPF.Controls">
    <WindowChrome
        x:Key="DefaultWindowChrome"
        CornerRadius="0"
        GlassFrameThickness="1"
        NonClientFrameEdges="None"
        UseAeroCaptionButtons="False" />
    <Style x:Key="DefaultSystemWindowStyle" TargetType="ui:SystemWindow">
        <Setter Property="WindowChrome.WindowChrome" Value="{DynamicResource DefaultWindowChrome}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ui:SystemWindow">
                    <Grid />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>